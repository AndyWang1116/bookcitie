<div class="row">
  <div class="col-md-12">
    <h3>已上傳書籍</h3>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th> 書名 </th>
          <th> 作者 </th>
          <th> 出版商 </th>
          <th> 出租價格 </th>
          <th> 建立日期 </th>
          <th> 最後修改日期</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th><%= book.id %></th>
          <td><%= link_to "#{book.title}", edit_admin_product_path(book) %></td>
          <td><%= book.author %></td>
          <td><%= book.publisher %></td>
          <td><%= book.price %> NTD</td>
          <td><%= book.created_at.to_s(:long) %></td>
          <td><%= book.updated_at.to_s(:long) %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
