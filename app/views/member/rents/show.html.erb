<div class="row">

  <div class="col-md-3">
    <%= render "common/sidebar_member" %>
  </div>

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-12">
        <h2>租借記錄 : 詳細內容</h2>
      </div>
      <hr>
    </div>
    <table class="table table-hover table-striped table-responsive">
      <thead>
        <tr>
          <th>書名</th>
          <th>作者</th>
          <th>出版商</th>
          <th>單價</th>
          <th>到期日</th>
          <th>租借狀態</th>

        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.publisher %></td>
          <td><%= book.price %></td>
          <td><%= render_due_day(@rent) %></td>
          <td><%= render_book_status(book) %></td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
