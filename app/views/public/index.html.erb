<h1 class="text-center"> 最新上架 </h1>

<hr>
<div class="container-fulid">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-3 col-sm-6 hero-feature">
        <%= link_to book_path(book) do %>
          <% if book.photo.present? %>
            <%= image_tag(book.photo.image.thumb.url, class: "thumbnail") %>
              <div class="caption">
                <h3><%= book.title %></h3>
                 NTD <%= book.price %>
              </div>
            <%= link_to("加到購物車", add_to_cart_book_path(book), method: :post, class: "btn btn-danger") %>
            <%= link_to("詳細資訊", book_path(book), class: "btn btn-info") %>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
